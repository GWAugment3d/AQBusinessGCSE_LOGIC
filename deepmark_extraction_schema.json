{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gwaugment3d.github.io/deepmark/deepmark_extraction_schema.json",
  "title": "DeepMark Extraction Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "paper_meta",
    "extractedAnswers",
    "transcriptRaw"
  ],
  "properties": {
    "paper_meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "student_name",
        "student_year",
        "test_title",
        "test_date"
      ],
      "properties": {
        "student_name": {
          "type": "string"
        },
        "student_year": {
          "type": "string"
        },
        "test_title": {
          "type": "string"
        },
        "test_date": {
          "type": "string"
        }
      }
    },
    "extractedAnswers": {
      "type": "object",
      "description": "Map of question id (e.g., 01.1, 02.5) to extracted answer payload",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "qid",
          "text",
          "source",
          "wordCount",
          "charCount"
        ],
        "properties": {
          "qid": {
            "type": "string",
            "pattern": "^[0-9]{2}\\.[0-9]{1,2}$"
          },
          "text": {
            "type": "string"
          },
          "source": {
            "type": "string",
            "enum": [
              "transcript",
              "ocr",
              "manual",
              "unknown"
            ]
          },
          "wordCount": {
            "type": "integer",
            "minimum": 0
          },
          "charCount": {
            "type": "integer",
            "minimum": 0
          },
          "diagnosticNote": {
            "type": "string"
          }
        }
      }
    },
    "transcriptRaw": {
      "type": "string",
      "description": "Raw transcript used for extraction. May include timestamps and section markers."
    }
  },
  "schema_name": "deepmark_extraction_schema",
  "schema_version": "2026-01-28.2",
  "required_top_level_keys": [
    "extractedAnswers",
    "transcriptRaw"
  ]
}