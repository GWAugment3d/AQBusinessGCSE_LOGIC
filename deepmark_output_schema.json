{
  "schema_name": "deepmark_output_schema",
  "schema_version": "1.0.0",
  "required_top_level_keys": [
    "paper_meta",
    "short_answers",
    "extended_answers"
  ],

  "paper_meta": {
    "required": [
      "student_name",
      "student_year",
      "test_title",
      "test_date"
    ],
    "optional": [
      "exam_board",
      "paper_code",
      "max_marks"
    ]
  },

  "short_answers": {
    "required": ["items"],
    "item_required": [
      "question_id",
      "marks_awarded",
      "marks_total",
      "feedback",
      "inline_annotations"
    ]
  },

  "extended_answers": {
    "required": ["items"],
    "item_required": [
      "question_id",
      "marks_awarded",
      "marks_total",
      "level_label",
      "level_explanation",
      "missing_rule",
      "checklist",
      "inline_annotations",
      "fix_it_activity"
    ]
  }
}
