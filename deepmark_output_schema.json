{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gwaugment3d.github.io/deepmark/deepmark_output_schema.json",
  "title": "DeepMark Output Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "paper_meta",
    "short_answers",
    "extended_answers"
  ],
  "properties": {
    "paper_meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "student_name",
        "student_year",
        "test_title",
        "test_date"
      ],
      "properties": {
        "student_name": {
          "type": "string",
          "minLength": 1
        },
        "student_year": {
          "type": "string",
          "minLength": 1
        },
        "test_title": {
          "type": "string",
          "minLength": 1
        },
        "test_date": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "short_answers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "qid",
          "marks_awarded",
          "marks_total",
          "feedback"
        ],
        "properties": {
          "qid": {
            "type": "string",
            "pattern": "^[0-9]{2}\\.[0-9]{1,2}$"
          },
          "marks_awarded": {
            "type": "integer",
            "minimum": 0
          },
          "marks_total": {
            "type": "integer",
            "minimum": 1
          },
          "feedback": {
            "type": "string",
            "description": "Very short student-facing feedback. Ideally ticks/crosses style handled by renderer."
          }
        }
      }
    },
    "extended_answers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "qid",
          "marks_awarded",
          "marks_total",
          "level_label",
          "level_explanation",
          "missing_rule",
          "checklist",
          "inline_annotations",
          "fix_it_activity"
        ],
        "properties": {
          "qid": {
            "type": "string",
            "pattern": "^[0-9]{2}\\.[0-9]{1,2}$"
          },
          "marks_awarded": {
            "type": "integer",
            "minimum": 0
          },
          "marks_total": {
            "type": "integer",
            "minimum": 1
          },
          "level_label": {
            "type": "string",
            "description": "Student-friendly level label. Must NOT use AQA descriptor wording."
          },
          "level_explanation": {
            "type": "string",
            "description": "One-line explanation in simple student language."
          },
          "missing_rule": {
            "type": "string",
            "description": "Must end with a clear missing rule (e.g., 'You need two sides.')."
          },
          "checklist": {
            "type": "array",
            "maxItems": 5,
            "items": {
              "type": "string"
            }
          },
          "inline_annotations": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "note",
                "tags"
              ],
              "properties": {
                "note": {
                  "type": "string",
                  "description": "Annotation note text. Keep short; renderer can style."
                },
                "tags": {
                  "type": "array",
                  "minItems": 1,
                  "maxItems": 2,
                  "items": {
                    "type": "string",
                    "pattern": "^\\[(✓|✗|\\?|~)AO(1|2|3)-(k|app|an|eval)\\]$"
                  }
                },
                "qid": {
                  "type": "string",
                  "pattern": "^[0-9]{2}\\.[0-9]{1,2}$"
                }
              }
            }
          },
          "fix_it_activity": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "question",
              "sentence_starter"
            ],
            "properties": {
              "question": {
                "type": "string",
                "description": "Direct question (<=14 words enforced by contract, not schema)."
              },
              "sentence_starter": {
                "type": "string",
                "pattern": ".*\\.\\.\\.$",
                "description": "Must end with ellipsis ... so the student can continue writing."
              }
            }
          }
        }
      }
    }
  },
  "schema_name": "deepmark_output_schema",
  "schema_version": "2026-01-28.2",
  "required_top_level_keys": [
    "paper_meta",
    "short_answers",
    "extended_answers"
  ]
}